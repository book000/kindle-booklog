{
  "name": "kindle-booklog",
  "version": "3.0.0",
  "description": "Get Kindle works purchased at Amazon.co.jp and register them in Booklog.",
  "homepage": "https://github.com/book000/kindle-booklog",
  "bugs": {
    "url": "https://github.com/book000/kindle-booklog/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:book000/kindle-booklog.git"
  },
  "scripts": {
    "compile": "tsc -p .",
    "compile:test": "tsc -p . --noEmit",
    "clean": "rimraf dist output",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.13.0",
    "@book000/node-utils": "1.24.38",
    "@types/node": "24.10.9",
    "@types/tar-stream": "3.1.4",
    "axios": "1.13.2",
    "csv-parse": "6.1.0",
    "eslint": "9.39.2",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.2",
    "eslint-plugin-promise": "7.2.1",
    "iconv-lite": "0.7.2",
    "otplib": "13.1.1",
    "prettier": "3.8.1",
    "puppeteer-core": "24.36.0",
    "run-z": "2.1.0",
    "tar-stream": "3.1.7",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
