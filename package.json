{
  "name": "kindle-booklog",
  "version": "3.0.0",
  "description": "Get Kindle works purchased at Amazon.co.jp and register them in Booklog.",
  "homepage": "https://github.com/book000/kindle-booklog",
  "bugs": {
    "url": "https://github.com/book000/kindle-booklog/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:book000/kindle-booklog.git"
  },
  "scripts": {
    "compile": "tsc -p .",
    "compile:test": "tsc -p . --noEmit",
    "clean": "rimraf dist output",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.11.1",
    "@book000/node-utils": "1.18.125",
    "@types/node": "22.18.0",
    "@types/tar-stream": "3.1.4",
    "axios": "1.11.0",
    "csv-parse": "6.1.0",
    "eslint": "9.34.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.21.3",
    "eslint-plugin-promise": "7.2.1",
    "iconv-lite": "0.7.0",
    "otplib": "12.0.1",
    "prettier": "3.6.2",
    "puppeteer-core": "24.18.0",
    "run-z": "2.1.0",
    "tar-stream": "3.1.7",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
